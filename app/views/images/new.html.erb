<h2>Subir imagen</h2>
<%= form_for @image, html: { multipart: true } do |f| %>
  <% if @image.errors.any? %>
    <% @image.errors.full_message.each do |msg| %>
      <div class="alert alert-danger">
        <%= msg %>
      </div>
    <% end %>
  <% end %>
  <div class="form-group">
    <%= f.label :image_title, "Titulo" %>
    <%= f.text_field :image_title, class:'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :category, "CategorÃ­a" %><br/>
    <%= f.select :category_id, Category.all.collect { |x| [x.name, x.id] },
        { :include_blank => 'Elige una' }, class:'form-control' %><br/>
  </div>
  <div class="form-group">
    <%= f.label :image_description, "DescripciÃ³n" %>
    <%= f.text_area :image_description, class:'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <br>
  <%= f.submit "Agregar", class:'btn btn-primary' %>
  <%= link_to "Cancelar", images_path, class:'btn btn-default' %>
<% end %>
