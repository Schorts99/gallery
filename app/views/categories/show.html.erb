<div id="gallery">
  <h2><%= @category.name %> <small class="pull-right">
    <%= link_to "Editar", edit_category_path %>
  </small></%></h2>
  <% @images.each_slice(4) do |image| %>
    <div class="row">
      <% image.each do |image| %>
        <div class="col-md-3">
          <div class="photo photo-type-line">
            <a href="<%= image.image_url() %>" class="photo-hover" data-lightbox="<%= image.category.name %>"
            data-title="<%= image.image_title %>">
              <div class="photo-info">
                <div class="headline"><%= image.image_title %></div>
                <div class="line"></div>
                <div class="desc">
                  <%= image.image_description %>
                </div>
                <div class="mask"></div>
              </div>
            </a>
            <div class="photo-img">
              <%= image_tag image.image_url(:thumb) %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
